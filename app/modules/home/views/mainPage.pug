//- This is how we extend a template using the 'extends' keyword
extends ../../../templates/master.pug

//- This is how we insert dynamic content to extended templates
block content

    
    if bday==""
    else
        script.
            alert("HAPPY BIRTHDAY! 🎈🎁🎊🎉");
    br
    font(face="Gulim" size=6)= `Hello ${n}!🖐️ Want to share something?`
    form(method='POST' action="/index/create" onSubmit="if(!confirm('Is POST DETAILS are finalized? Please confirm before you procede.')){return false;}")
        
        .row
            .col-md-9
                if alert == 0
                    .alert.alert-danger(role='alert') <strong> Ooops! </strong> The TITLE you've entered is already used. 
                if alert == 1
                    .alert.alert-success(role='alert')
                          strong Yaay!
                          |  You have posted successfully.
        .row
            .col-md-1
                h5 <strong> Title: </strong>
            .col-md-8
                textarea.form-control(rows='1' name="title" required oninvalid="this.setCustomValidity('Set a TITLE for you post!')" oninput="setCustomValidity('')")
        br
        .row
            .col-md-1
                h5 <strong> Your Post </strong>
            .col-md-8
                textarea.form-control(rows='3' name="post" required oninvalid="this.setCustomValidity('Please say something about your post!')" oninput="setCustomValidity('')")
        br

        .row
            .col-md-4
                h5 <strong> Choose Category: </strong>
                select.form-control(name="selectCateg")
                    each c in category
                        option(value=`${c.categoryName}`)=`${c.categoryName}`
                        
            .col-md-8
                br
                br
                input.btn.btn-default(type='submit', value='Submit')
    br
    br
    hr


    
    center
        h2 <font face="Lucida Calligraphy" size="6" > <strong>👥  Forum Posts  👥</strong></font>
    
    
    br
    each p in post
        font(face="Gulim" size=6 color="#277455")=`${p.title}`
        br
        font(color="gray")= `.  . .🚶by ${p.username} to category ${p.categoryName}` 
        br
        font(size=4)= `🗣️${p.content}` 
        br
        font(size=1)=`🕑 ${p.date}`
        br
        <hr style="height:1px; border:none; color:#000; background-color:gray;">

